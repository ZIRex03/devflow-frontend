{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@pages/*": ["src/pages/*"],
      "@components/*": ["src/components/*"],
      "@styles/*" : ["src/styles/*"], 
      "@images/*" : ["src/images/*"], 
      "@icons/*" : ["src/images/icons/*"], 
      "@features/*" : ["src/features/*"], 
      "@slice/*" : ["src/features/slice/*"], 
    },
    "strict": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"]
}